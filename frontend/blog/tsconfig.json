{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": ["ESNext", "DOM"],
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "types": ["vue/macros-global"]
  },
  "include": ["./**/*", ".vitepress/**/*"],
  "exclude": ["node_modules", "dist"]
}
